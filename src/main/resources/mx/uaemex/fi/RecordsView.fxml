<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="454.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.uaemex.fi.controller.RecordsController">

    <children>

        <!-- MEJOR MARCA -->
        <Label fx:id="lblMejorRecord"
               layoutX="140.0"
               layoutY="100.0"
               text="Tu mejor marca: ">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!-- TÍTULO -->
        <Label layoutX="265.0" layoutY="153.0" text="Tus records:">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!-- TABLA -->
        <TableView fx:id="tblRecords"
                   layoutX="200.0"
                   layoutY="185.0"
                   prefHeight="220.0"
                   prefWidth="240.0">

            <columns>
                <TableColumn fx:id="colRecord"
                             prefWidth="120.0"
                             text="Victorias"/>

                <TableColumn fx:id="colFecha"
                             prefWidth="120.0"
                             text="Fecha"/>
            </columns>
        </TableView>

        <!-- BOTÓN MENÚ -->
        <Button layoutX="483.0"
                layoutY="30.0"
                prefHeight="51.0"
                prefWidth="94.0"
                mnemonicParsing="false"
                text="≡"
                onAction="#onMenuClic">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>

        <!-- BOTÓN JUGAR -->
        <Button layoutX="484.0"
                layoutY="97.0"
                prefHeight="26.0"
                prefWidth="94.0"
                mnemonicParsing="false"
                text="Jugar"
                onAction="#onJugarClic"/>

    </children>
</AnchorPane>
