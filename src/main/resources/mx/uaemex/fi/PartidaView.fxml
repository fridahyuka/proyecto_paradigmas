<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="586.0" style="-fx-background-color: #01344A;"
   xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="mx.uaemex.fi.controller.PartidaController">

   <Label layoutX="53.0" layoutY="58.0" prefHeight="27.0" prefWidth="123.0"
      style="-fx-background-color: null; -fx-border-color: #46CBF0;" text="Invicto: "
      textFill="WHITE">
      <font>
         <Font size="16.0" />
      </font>
   </Label>

   <VBox layoutX="224.0" layoutY="21.0" prefHeight="304.0" prefWidth="135.0" spacing="10">
      <Label fx:id="lblOponente" text="Computadora:" visible="false" />
      <ImageView fx:id="imgOponente" fitHeight="120" preserveRatio="true" />
      <Label fx:id="lblResultado" prefHeight="71.0" prefWidth="167.0" text="Label" textFill="WHITE"
         visible="false">
         <font>
            <Font size="36.0" />
         </font>
      </Label>

      <Label fx:id="lblJugador" text="Tú:" visible="false" />
      <ImageView fx:id="imgJugador" fitHeight="120" preserveRatio="true" />

      <Button fx:id="btnIniciar" onAction="#onIniciarClic" prefHeight="27.0" prefWidth="167.0"
         style="-fx-background-color: null; -fx-border-color: #46CBF0; -fx-border-radius: 20;"
         text="Iniciar" textFill="#46cbf0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </VBox>

   <HBox layoutX="5.0" layoutY="491.0" spacing="20">

      <ImageView fx:id="imgPiedra" fitHeight="80.0" fitWidth="110.0" onMouseClicked="#onPiedraClick"
         preserveRatio="true">
         <image>
            <Image url="@images/piedra.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>

      <ImageView fx:id="imgPapel" fitHeight="80.0" fitWidth="110.0" onMouseClicked="#onPapelClick"
         preserveRatio="true">
         <image>
            <Image url="@images/papel.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>

      <ImageView fx:id="imgTijera" fitHeight="80.0" fitWidth="110.0" onMouseClicked="#onTijeraClick"
         preserveRatio="true">
         <image>
            <Image url="@images/tijera.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>

      <ImageView fx:id="imgLagarto" fitHeight="80.0" fitWidth="110.0"
         onMouseClicked="#onLagartoClick" preserveRatio="true">
         <image>
            <Image url="@images/lagarto.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>

      <ImageView fx:id="imgSpock" fitHeight="80.0" fitWidth="110.0" onMouseClicked="#onSpockClick"
         preserveRatio="true">
         <image>
            <Image url="@images/spock.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>

   </HBox>
   <Label fx:id="lblConteo" layoutX="110.0" layoutY="58.0" text="0" textFill="WHITE">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Label fx:id="lblMensaje" layoutX="237.0" layoutY="458.0" text="Elige una opcion: "
      textFill="WHITE">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
   <Button layoutX="444.0" layoutY="45.0" mnemonicParsing="false" onAction="#onMenuClick"
      prefHeight="51.0" prefWidth="94.0"
      style="-fx-background-color: null; -fx-border-color: #46CBF0;" text="≡" textFill="#46cbf0">
      <font>
         <Font size="24.0" />
      </font>
   </Button>

</AnchorPane>